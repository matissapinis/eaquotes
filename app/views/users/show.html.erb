<h3><%= @user.display_name %></h3>
<p>Full Name: <%= @user.full_name %> <% if @user.display_name == @user.full_name %>(<i>same as display name</i>)<% end %></p>
<br>

<h5><%= @user.display_name %>' quotes:</h5>
<ul>
  <% @quotes.each do |quote| %>
    <li>
      “<%= quote.content %>”<br>
      ― <strong><%= quote.attribution %></strong><% if quote.source.present? %><% if quote.source_link.present? %>, <%= link_to quote.source, quote.source_link %><% else %>, <%= quote.source %><% end %><% end %>
      <br>
      <small>Posted on <%= quote.created_at.strftime("%B %d, %Y") %> &nbsp; <% if current_user.favorited_quotes.include?(quote) %><%= link_to '❤', remove_favorite_quote_path(quote), method: :delete %><% else %><%= link_to '🤍', add_favorite_quote_path(quote), method: :post %><% end %> <%= quote.favoriting_users.count %></small>
    </li>
    <br>
  <% end %>
</ul>

<!-- ### TD: 'will_paginate-bootstrap4' gem or another gem for Bootstrap 5? -->
<!-- #### <%= will_paginate @quotes %> -->
<%= will_paginate @quotes, param_name: 'quotes_page' %>

<br>
<h5><%= @user.display_name %>' favorited quotes:</h5>
<ul>
    <% if @favorite_quotes.present? %>
        <% @favorite_quotes.each do |quote| %>
            <li>
                “<%= quote.content %>”<br>
                ― <strong><%= quote.attribution %></strong><% if quote.source.present? %><% if quote.source_link.present? %>, <%= link_to quote.source, quote.source_link %><% else %>, <%= quote.source %><% end %><% end %>
                <br>
                <small>Posted by: <%= link_to quote.user.display_name, user_path(quote.user) %> on <%= quote.created_at.strftime("%B %d, %Y") %> &nbsp; <% if current_user.favorited_quotes.include?(quote) %><%= link_to '❤', remove_favorite_quote_path(quote), method: :delete %><% else %><%= link_to '🤍', add_favorite_quote_path(quote), method: :post %><% end %> <%= quote.favoriting_users.count %></small>
            </li>
            <br>
        <% end %>
    <% else %>
        <p>This user hasn't favorited any quotes yet.</p>
    <% end %>
</ul>

<!-- <%= will_paginate @favorite_quotes %> -->
<%= will_paginate @favorite_quotes, param_name: 'favorites_page' %>
